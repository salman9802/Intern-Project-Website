<div class="sticky top-0 left-0 right-0 z-40 <%= _url_ === "/" ? "bg-transparent" : "bg-white" %> w-screen py-3 hover:bg-white group lg:px-7">

    <!-- Hamburger Menu -->
    <div id="hamburger-overlay" class="hidden w-screen h-screen absolute z-40 bg-black opacity-30"></div>
    <div id="hamburger-menu"
        class="px-7 h-screen w-full absolute z-50 bg-white flex flex-col space-y-5 -translate-x-full transition-transform md:w-1/2 lg:hidden">
        <span id="close-hamburger-btn" class="text-4xl py-5 cursor-pointer">&times;</span>
        <div class="flex flex-col divide-y divide-gray-800">
            <div class="py-5 flex items-center justify-between">
                <span class="text-gray-800">BEST SELLER</span>
                <span>&rang;</span>
            </div>
            <div class="py-5 flex items-center justify-between">
                <span class="text-gray-800">FRAGARANCE</span>
                <span>&rang;</span>
            </div>
            <div class="py-5 flex items-center justify-between">
                <span class="text-gray-800">BRANDS</span>
                <span>&rang;</span>
            </div>
            <div class="py-5 flex items-center justify-between">
                <span class="text-gray-800">FANCY BOTTLE</span>
                <span>&rang;</span>
            </div>
            <div class="py-5 flex items-center justify-between">
                <span class="text-gray-800">ACCESSORIES</span>
                <span>&rang;</span>
            </div>
            <div class="py-5 flex items-center justify-between">
                <span class="text-gray-800">DECANT/SAMPLE</span>
                <span>&rang;</span>
            </div>
        </div>
    </div>


    <!-- Cart Menu -->
    <div id="cart-overlay" class="hidden w-screen h-screen absolute z-40 -top-4 -left-4 bg-black opacity-30"></div>
    <div id="cart-menu"
        class="px-7 pb-16 h-screen w-full absolute right-0 z-50 bg-white flex flex-col space-y-5 translate-x-full transition-transform md:w-1/4">
        <div class="p-5 flex justify-between items-center">
            <span class="text-2xl">CART</span>
            <span id="close-cart-btn" class="text-4xl cursor-pointer">&times;</span>
        </div>
        <!-- If cart is empty -->
        <!-- <div class="h-full flex justify-center items-center">
            YOUR CART IS EMPTY
        </div> -->
        <!-- else -->
        <!-- cart items -->
        <div class="h-full flex flex-col space-y-3">
            <% if (cartProducts.length > 0) { %> <!-- if cart is not empty -->
                <% for( const product of cartProducts ) { %>
                    <div class="p-2 flex space-x-3"> <!-- cart item -->
                        <!-- product image -->
                        <img src="<%= product.img_url %>" class="object-contain object-center w-1/2">
                        <div class="flex flex-col space-y-1">
                            <h3 class="text-lg text-gray-800"><%= product.name %></h3>
                            <span class="text-sm text-gray-500">&#8377; <%= product.price?.toLocaleString() %></span>
                            <form action='/user/cart/modify/<%= product.slug %>'  class="flex space-x-2">
                                <input onchange="this.form.submit();" type="number" name="quantity" class="px-3 py-1 w-12 text-gray-800 md:w-16" min="1" max="10" value="<%= product.quantity %>">
                                <button type="submit" name="remove" value="true" class="text-black underline hover:no-underline">Remove</button>
                            </form>
                        </div>
                    </div>
                <% } %>
                <% } else { %> <!-- if cart is empty -->
                    <div class="h-full flex justify-center items-center">
                        YOUR CART IS EMPTY
                    </div>
                <% } %>
