<div class="w-screen p-3 bg-slate-100 py-12">
    <!-- Title -->
    <!-- <h3 class="text-xl text-blue-500 text-center py-5 md:text-2xl lg:text-5xl">Featured Products</h3> -->
    <!-- <hr class="w-[20%] h-1 bg-blue-500 mx-auto md:w-[10%] mb-12"> -->
    <!-- Flex container -->
    <!-- <div class="flex flex-wrap justify-center gap-2 mx-auto w-4/5 lg:container"> -->
    <div class="grid grid-cols-1 gap-4 mx-auto w-4/5 md:grid-cols-3 lg:container lg:grid-cols-4">
        <% if (products.length) { %>
            <% for (const product of products) { %>
                <!-- Product -->
                <!-- <div class=" flex flex-col space-y-3 justify-center items-center"> -->
                <a href="/products/<%= product.slug %>" class="mb-auto text-center flex flex-col space-y-2 p-2 transition-all hover:shadow-md">

                    <img src="<%= product.img_url %>" alt="" class="w-full max-h-[500px] object-contain object-center transition-all group-hover:scale-110">
                    <% if (product.company) { %>
                        <h4 class="text-base font-bold capitalize"><%= product.company %></h4>
                    <% } %>

                    <p class="text-gray-800 text-sm"><%= product.name?.substring(0, 35) + "..." %></p>
                    <p class="text-lg font-semibold">&#8377;<%= product.price %></p>
                </a>
                <!-- </div>  -->
            <% } %>
        <% } %>
    </div>
</div>