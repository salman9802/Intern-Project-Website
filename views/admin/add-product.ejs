          <div class="border-b border-gray-900/10 pb-12">
      
            <div class="mt-10 flex space-x-10">
              <fieldset>
                <legend class="text-sm font-semibold leading-6 text-gray-900">Product Category</legend>
                <div class="mt-6 space-y-6">
                  <div class="relative flex gap-x-3">
                    <div class="flex h-6 items-center">
                      <input id="tv" name="product-category" type="radio" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" value="tv">
                    </div>
                    <div class="text-sm leading-6">
                      <label for="tv" class="font-medium text-gray-900">TV</label>
                    </div>
                  </div>
                  
                  <div class="relative flex gap-x-3">
                    <div class="flex h-6 items-center">
                      <input id="phone" name="product-category" type="radio" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" value="phone">
                    </div>
                    <div class="text-sm leading-6">
                      <label for="phone" class="font-medium text-gray-900">Phone</label>
                    </div>
                  </div>

                  <div class="relative flex gap-x-3">
                    <div class="flex h-6 items-center">
                      <input id="desktop" name="product-category" type="radio" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" value="desktop">
                    </div>
                    <div class="text-sm leading-6">
                      <label for="desktop" class="font-medium text-gray-900">Desktop</label>
                    </div>
                  </div>

                  <div class="relative flex gap-x-3">
                    <div class="flex h-6 items-center">
                      <input id="laptop" name="product-category" type="radio" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" value="laptop">
                    </div>
                    <div class="text-sm leading-6">
                      <label for="laptop" class="font-medium text-gray-900">Laptop</label>
                    </div>
                  </div>

                  <div class="relative flex gap-x-3">
                    <div class="flex h-6 items-center">
                      <input id="home-appliance" name="product-category" type="radio" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" value="home-appliance">
                    </div>
                    <div class="text-sm leading-6">
                      <label for="home-appliance" class="font-medium text-gray-900">Home Appliance</label>
                    </div>
                  </div>

                  <div class="relative flex gap-x-3">
                    <div class="flex h-6 items-center">
                      <input id="ac" name="product-category" type="radio" class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" value="ac">
                    </div>
                    <div class="text-sm leading-6">
                      <label for="ac" class="font-medium text-gray-900">AC</label>
                    </div>
                  </div>
                </div>
              </fieldset>
              <fieldset>
                <legend class="text-sm font-semibold leading-6 text-gray-900">Product Brand</legend>
                <div class="mt-6 space-y-6">
