                    <input id="lg" name="product-company" type="radio" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-600" value="lg">
                    <label for="lg" class="block text-sm font-medium leading-6 text-gray-900">LG</label>
                  </div>

                  <div class="flex items-center gap-x-3">
                    <input id="voltas" name="product-company" type="radio" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-600" value="voltas">
                    <label for="voltas" class="block text-sm font-medium leading-6 text-gray-900">Voltas</label>
                  </div>

                  <div class="flex items-center gap-x-3">
                    <input id="asus" name="product-company" type="radio" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-600" value="asus">
                    <label for="asus" class="block text-sm font-medium leading-6 text-gray-900">ASUS</label>
                  </div>

