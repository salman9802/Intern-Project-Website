                  </div>

                  <div class="flex items-center gap-x-3">
                    <input id="lenovo" name="product-company" type="radio" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-600" value="lenovo">
                    <label for="lenovo" class="block text-sm font-medium leading-6 text-gray-900">Lenovo</label>
                  </div>

                  <div class="flex items-center gap-x-3">
                    <input id="hp" name="product-company" type="radio" class="h-4 w-4 border-gray-300 text-blue-600 focus:ring-blue-600" value="hp">
                    <label for="hp" class="block text-sm font-medium leading-6 text-gray-900">HP</label>
                  </div>
                </div>
              </fieldset>
            </div>
          </div>
